<!DOCTYPE html>
<html lang="es" class="h-100">


<!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del head -->
<%- include('./partials/head.ejs',{titulo: 'PEDIDO' }) %>

<body class="d-flex flex-column h-100">
    <header>
        <!-- Se incluye el documento parcial donde se almacena la codificacion de 
        la parte del encabezado -->
        <%- include('./partials/nav.ejs',{activeTab: 'Pedidos' }) %>
    </header>
    <main class="flex-shrink-0">
        <div class="container">
            <!-- Condicional para definir el contenido de la página
                según el tipo de acción -->
            <% if (accion === 'nuevo') { %>

            <h2 class="mt-3">Nuevo Pedido</h2>
            <form action="/pedido/guardar" method="post" id="frm-pedido">
                <%- include('./forms/frm-pedido.ejs',{data: data})  %>
                <input type="hidden" id="pedidoVendedor" value="<%=vendedor%>">
            </form>
            <% }else {%>
            <h1>Acción no válida</h1>
            <% }%>
        </div>
    </main>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del pie de página y scripts -->
    <%- include('./partials/footer.ejs') %>
    <script src="/js/pedidos.js"></script>
</body>

</html>